{
  "version": 2,
  "monorepo": true,
  "github": {
    "enabled": true,
    "autoAlias": false
  },
  "projects": [
    {
      "name": "solanouns-webapp",
      "source": "packages/solanouns-webapp",
      "framework": "vite",
      "buildCommand": "cd ../.. && npm install && npm run build --workspace=@solanouns/webapp",
      "outputDirectory": "packages/solanouns-webapp/dist",
      "installCommand": "npm install",
      "rootDirectory": "packages/solanouns-webapp",
      "env": {
        "VITE_API_URL": "https://solanouns-api.vercel.app"
      }
    },
    {
      "name": "solanouns-api",
      "source": "packages/solanouns-api",
      "buildCommand": "cd ../.. && npm install",
      "installCommand": "npm install",
      "rootDirectory": "packages/solanouns-api"
    }
  ]
}