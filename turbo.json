{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", "lib/**", "abi/**", "typechain/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "type-check": {
      "dependsOn": ["^build"]
    },
    "codegen": {
      "dependsOn": ["^build"],
      "outputs": ["src/**/*.gen.ts", "src/contracts/**", "src/subgraphs/**"]
    },
    "clean": {
      "cache": false
    }
  }
}